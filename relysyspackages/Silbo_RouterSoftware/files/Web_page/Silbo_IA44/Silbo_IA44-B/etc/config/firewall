
config defaults 'def'
	option syn_flood '1'
	option input 'REJECT'
	option output 'REJECT'
	option forward 'REJECT'

config rule 'ipsec_rule1'
	option name 'Allow-IKE-input'
	option src 'CWAN1_0'
	option proto 'udp'
	option dest_port '500'
	option target 'ACCEPT'

config rule 'ipsec_rule2'
	option name 'Allow-IKE-input'
	option src 'CWAN1_0'
	option proto 'udp'
	option dest_port '4500'
	option target 'ACCEPT'

config rule 'ipsec_rule3'
	option name 'Allow-ESP-input'
	option src 'CWAN1_0'
	option proto 'esp'
	option target 'ACCEPT'

config include
	option path '/etc/firewall.user'

config zone 'wifi'
	option name 'ra0'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option network 'ra0'
	option masq '1'
	option mtu_fix '1'
	option extra_src '-m policy --dir in --pol none'
	option extra_dest '-m policy --dir out --pol none'

config rule 'udp_DHCPwan6c1_replies'
	option target 'ACCEPT'
	option src 'wan6c1'
	option proto 'udp'
	option dest_port '546'
	option name 'Allow DHCPwan6c1 replies'
	option family 'ipv6'
	option src_port '547'

config rule 'udp_DHCPwan6c2_replies'
	option target 'ACCEPT'
	option src 'wan6c2'
	option proto 'udp'
	option dest_port '546'
	option name 'Allow DHCPwan6c2 replies'
	option family 'ipv6'
	option src_port '547'

config zone 'cwan1_0'
	option name 'CWAN1_0'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option network 'CWAN1_0'
	option masq '1'
	option mtu_fix '1'
	option extra_src '-m policy --dir in --pol none'
	option extra_dest '-m policy --dir out --pol none'
	
config zone 'SW_LAN'
	option name 'SW_LAN'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option masq '1'
	option mtu_fix '1'
	option network 'SW_LAN'
	option extra_src '-m policy --dir in --pol none'
	option extra_dest '-m policy --dir out --pol none'
	option forward 'REJECT'

config forwarding 'wificwan1_0'
	option src 'ra0'
	option dest 'CWAN1_0'

config forwarding 'wificwan1_1'
	option src 'ra0'
	option dest 'CWAN1_1'

config forwarding 'SW_LANcwan1_0'
	option src 'SW_LAN'
	option dest 'CWAN1_0'

config forwarding 'SW_LANcwan1_1'
	option src 'SW_LAN'
	option dest 'CWAN1_1'
